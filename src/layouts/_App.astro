---
import '@fontsource/sarabun/300.css';
import '@fontsource/sarabun/400.css';
import '@fontsource/sarabun/600.css';
import '@fontsource/roboto-condensed/400.css';
import '@fontsource/roboto-condensed/700.css';
import '@fontsource/noto-serif/700.css';
import '@fontsource/quicksand/700.css';

export interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
    <title>{title ? `${title} - ` : null}Christopher Ehrlich</title>
    <script is:inline>
      const theme = (() => {
        if (
          typeof localStorage !== 'undefined' &&
          localStorage.getItem('theme')
        ) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();
      if (theme === 'light') {
        document.documentElement.classList.remove('theme-dark');
      } else {
        document.documentElement.classList.add('theme-dark');
      }
    </script>
  </head>

  <body>
    <slot />

    <style>
      :root {
        --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
        --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 2.5rem);
        --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

        --color-text: hsl(12, 5%, 4%);
        --color-bg: hsl(26, 50%, 95%);
        --color-link: rgb(162, 84, 60);
        --color-link-bg: rgba(162, 84, 60, 0.2);
      }

      :root.theme-dark {
        --color-text: rgb(229, 231, 235);
        --color-bg: rgb(16, 12, 8);
        --color-link: rgb(100, 202, 202);
        --color-link-bg: rgba(100, 202, 202, 0.4);
      }

      html,
      body {
        margin: 0;
        font-family: Sarabun, system-ui, -apple-system, BlinkMacSystemFont,
          'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans',
          'Helvetica Neue', sans-serif;
        font-weight: 300;
        font-size: var(--font-size-base);
        color: var(--color-text);
        background-color: var(--color-bg);

        transition-property: color, background-color;
        transition-duration: 0.5s;
        transition-timing-function: linear;
      }

      :global(a) {
        color: var(--color-link);
        text-decoration: none;
        border-color: var(--color-link);
      }

      :global(a:hover) {
        text-decoration: underline;
      }

      :global(h2) {
        font-size: var(--font-size-lg);
      }

      :global(code) {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
      }

      :global(hr) {
        border-top-color: var(--color-text);
      }

      :global(.page-header) {
        font-family: Sarabun;
        font-weight: 400;
        font-size: 40px;
      }

      :global(.bgglow) {
        transition: background-color 0.2s;
      }

      :global(.bgglow:hover) {
        background-color: var(--color-link-bg);
      }
    </style>
  </body>
</html>
